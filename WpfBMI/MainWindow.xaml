<Window x:Class="WpfBMI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBMI"
        mc:Ignorable="d"
        
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="BMI" Height="350" Width="525">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="BMI 運算" Margin="0,0,0,10" FontSize="14" HorizontalAlignment="Center"/>

            <TextBlock Text="身高"/>
            <TextBox x:Name="tbHeight" Width="150" Margin="0,0,0,10"/>

            <TextBlock Text="體重"/>
            <TextBox x:Name="tbWeight" Width="150" Margin="0,0,0,20"/>

            <Button x:Name="btnCalc" Width="100" Height="20" IsDefault="True" Content="計算" Click="btnCalc_Click" Margin="0,0,0,10"/>
            <Button x:Name="btnReset" Width="100" Height="20" Content="重設" Margin="0,0,0,10" Click="btnReset_Click_"/>
            <TextBlock Text="Result:"/>
            <TextBlock x:Name="txtResult"/>
        </StackPanel>

    </Grid>
</Window>
